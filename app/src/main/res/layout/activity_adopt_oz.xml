<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    android:orientation="vertical"
    tools:context="com.msk.adopt4k.AdoptOzActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <TextView
            android:text="Thank you! "
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#888"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/username"
            android:text="Hawaii Kona Base"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#232276"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:text="You are goiong to reach OZ:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#888"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/world_id"
            android:text="ABC-123"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#232276"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text=" in "
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#232276"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/cnty_name"
            android:text="Turkey"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#232276"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:text="By:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#888"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:text="Year "
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#232276"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/target_year"
            android:text="2016"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#232276"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/change_oz"
            android:text="CHANGE"
            android:textSize="14sp"
            android:textColor="#fff"
            android:background="@drawable/button_ne"
            android:padding="8dp"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/select"
            android:text="YES, I WILL"
            android:textSize="14sp"
            android:textColor="#fff"
            android:background="@drawable/button_bl"
            android:padding="8dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="YES, I WILL &amp; I WILL ADOPT MORE"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:background="@drawable/button_or"
        android:padding="12dp"
        android:gravity="center"
        android:id="@+id/select_n_continue" />


</LinearLayout>
