<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.msk.adopt4k.FindOzActivity">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Type an OZ ID"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/cancel"
            android:text="Cancel"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#4466ff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <EditText
        android:id="@+id/input_ozid"
        android:hint="Omega Zone ID"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#999"
        android:background="@drawable/input_field"
        android:padding="10dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/find"
            android:text="FIND"
            android:textSize="14sp"
            android:textColor="#fff"
            android:background="@drawable/button_or"
            android:padding="8dp"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/select"
            android:text="SELECT"
            android:textSize="14sp"
            android:textColor="#fff"
            android:background="@drawable/button_bl"
            android:padding="8dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <WebView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
